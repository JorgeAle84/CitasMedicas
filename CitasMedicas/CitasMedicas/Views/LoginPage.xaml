<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitasMedicas.Views.LoginPage">

    <StackLayout Orientation="Vertical" VerticalOptions="Center" >
        <Image Source="pacientes.png" />
        <Entry x:Name="Usuario" Placeholder="Ingrese Usuario" />
        <Entry x:Name="Password" Placeholder="Ingrese Contraseña" IsPassword="True" />
        <Button Text="Ingresar" Clicked="Ingresar_Click" />
    </StackLayout>
</ContentPage>